<div class="text-center">
  <h1 class= "text-danger">Task Information:</h1>
</div>
<br>

<div class="text-center">

  <h3>Title: <%= @task.title  %></h3>
  <h3>Details: <%= @task.details  %></h3>
  <h3>Completed? <%= @task.completed  %></h3>
  <br>

  <button type="button" class="btn btn-warning"><%= link_to "Edit this task", task_edit_path %></button>
  <button type="button" class="btn btn-danger"><%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %></button>
  <button type="button" class="btn btn-dark"><%= link_to "Back to Task List", all_tasks_path %></button>
</div>
